{
  "name": "tourze/doctrine-dedicated-connection-bundle",
  "description": "Symfony Bundle for creating dedicated database connections per service, similar to Monolog channels",
  "type": "symfony-bundle",
  "keywords": [
    "symfony",
    "doctrine",
    "database",
    "connection",
    "multi-database",
    "dedicated-connection"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Tourze Team",
      "email": "dev@tourze.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "doctrine/dbal": "^4.0",
    "doctrine/doctrine-bundle": "^2.13",
    "doctrine/orm": "^3.0",
    "doctrine/persistence": "^3.1 || ^4",
    "psr/log": "^3|^2|^1",
    "symfony/config": "^6.4",
    "symfony/dependency-injection": "^6.4",
    "symfony/doctrine-bridge": "^6.4",
    "symfony/framework-bundle": "^6.4",
    "symfony/http-kernel": "^6.4",
    "symfony/yaml": "^6.4 || ^7.1",
    "tourze/bundle-dependency": "0.0.*"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.0",
    "symfony/phpunit-bridge": "^6.4"
  },
  "autoload": {
    "psr-4": {
      "Tourze\\DoctrineDedicatedConnectionBundle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tourze\\DoctrineDedicatedConnectionBundle\\Tests\\": "tests"
    }
  }
}